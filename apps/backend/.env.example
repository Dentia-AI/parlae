# ==================================================================
# Backend Environment Variables
# Copy this to .env and fill in real values
# ==================================================================

# Database
DATABASE_URL=postgresql://parlae:parlae@localhost:5433/parlae?schema=public

# Cognito Authentication
COGNITO_USER_POOL_ID=your_pool_id
COGNITO_CLIENT_ID=your_client_id
COGNITO_REGION=us-east-1

# ==================================================================
# PMS Credentials (NEVER in DB, always in environment)
# ==================================================================

# Sikka PMS (Shared credentials for all accounts)
SIKKA_APP_ID=your_sikka_app_id
SIKKA_APP_KEY=your_sikka_app_key

# Kolla PMS (if using)
# KOLLA_API_KEY=your_kolla_api_key

# ==================================================================
# Vapi.ai (AI Voice Agents)
# ==================================================================
VAPI_API_KEY=your_vapi_api_key
VAPI_WEBHOOK_SECRET=your_webhook_secret

# ==================================================================
# Twilio (Phone System)
# ==================================================================
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_MESSAGING_SERVICE_SID=your_messaging_sid

# ==================================================================
# Google Calendar (Alternative to PMS for appointment management)
# ==================================================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/google-calendar/callback

# ==================================================================
# Application
# ==================================================================
PORT=4000
APP_BASE_URL=http://localhost:4000
NODE_ENV=development
