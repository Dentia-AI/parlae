{
  "name": "@apps/backend",
  "version": "0.1.0",
  "private": true,
  "description": "NestJS backend service for Parlae",
  "scripts": {
    "start": "node dist/apps/backend/src/main.js",
    "start:dev": "ts-node --project tsconfig.json src/main.ts",
    "start:debug": "node --inspect-brk dist/apps/backend/src/main.js",
    "build": "nest build",
    "lint": "eslint \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "pnpm --filter @kit/prisma generate",
    "prisma:migrate": "pnpm --filter @kit/prisma migrate:deploy"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.705.0",
    "@aws-sdk/client-ses": "^3.990.0",
    "@kit/prisma": "workspace:*",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.0.0",
    "axios": "^1.7.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "googleapis": "144",
    "reflect-metadata": "^0.2.0",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.2",
    "stripe": "^19.1.0",
    "twilio": "^5.3.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.9.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.4.1",
    "@typescript-eslint/parser": "^8.4.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "prettier": "^3.6.2",
    "prisma": "^5.22.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
